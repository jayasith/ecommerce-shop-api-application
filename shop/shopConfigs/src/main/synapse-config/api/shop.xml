    <resource methods="GET" uri-template="/getproduct/{getPID}">
        <inSequence>
            <property expression="get-property('uri.var.getPID')" name="uri.var.pid" scope="default" type="STRING"/>
            <log/>
            <send>
                <endpoint key="getProduct"/>
            </send>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
        <faultSequence/>
    </resource>
</api>
